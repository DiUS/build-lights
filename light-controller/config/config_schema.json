{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "light": {
            "oneOf": [
                {
                    "type": "object",
                    "properties": {
                        "type": {
                            "enum": [
                                "adafruit_lpd8806",
                                "epistar_lpd8806"
                            ]
                        },
                        "num_leds": {
                            "type": "integer",
                            "minimum": 1
                        },
                        "simulate_mode": {
                            "type": "boolean"
                        },
                        "spidev": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "type",
                        "num_leds"
                    ],
                    "additionalProperties": false
                },
                {
                    "type": "object",
                    "properties": {
                        "type": {
                            "enum": [
                                "console"
                            ]
                        },
                        "num_leds": {
                            "type": "integer",
                            "minimum": 1
                        }
                    },
                    "required": [
                        "type",
                        "num_leds"
                    ],
                    "additionalProperties": false
                }
            ]
        },
        "api": {
            "oneOf": [
                {
                    "type": "object",
                    "properties": {
                        "type": {
                            "enum": [
                                "jenkins"
                            ]
                        },
                        "url": {
                            "type": "string",
                            "pattern": "^https?://[0-9a-zA-Z-_]+:?[0-9]+$"
                        },
                        "pollrate_s": {
                            "type": "integer",
                            "minimum": 1
                        }
                    },
                    "required": [
                        "type",
                        "url",
                        "pollrate_s"
                    ],
                    "additionalProperties": false
                },
                {
                    "type": "object",
                    "properties": {
                        "type": {
                            "enum": [
                                "circleci"
                            ]
                        },
                        "api_token": {
                            "type": "string"
                        },
                        "username": {
                            "type": "string"
                        },
                        "pollrate_s": {
                            "type": "integer",
                            "minimum": 1
                        }
                    },
                    "required": [
                        "type",
                        "api_token",
                        "username",
                        "pollrate_s"
                    ],
                    "additionalProperties": false
                },
                {
                    "type": "object",
                    "properties": {
                        "type": {
                            "enum": [
                                "travisci"
                            ]
                        },
                        "username": {
                            "type": "string"
                        },
                        "pollrate_s": {
                            "type": "integer",
                            "minimum": 1
                        }
                    },
                    "required": [
                        "type",
                        "username",
                        "pollrate_s"
                    ],
                    "additionalProperties": false
                }
            ]
        },
        "jobs": {
            "type": "array",
            "uniqueItems": true,
            "minItems": 1,
            "items": {
                "type": "string"
            }
        }
    },
    "required": [
        "light",
        "api",
        "jobs"
    ]
}
