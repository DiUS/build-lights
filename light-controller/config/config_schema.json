{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "light": {
      "oneOf": [{
          "type": "object",
          "properties": {
              "type": {
                  "enum": ["adafruit_lpd8806", "epistar_lpd8806"]
              },
              "num_leds": {
                  "type": "integer",
                  "minimum": 1
              },
              "simulate_mode": {
                  "type": "boolean"
              },
              "spidev": {
                  "type": "string"
              }
          },
          "required": [
              "type",
              "num_leds"
          ],
          "additionalProperties": false
      },{
          "type": "object",
          "properties": {
              "type": {
                  "enum": ["console"]
              },
              "num_leds": {
                  "type": "integer",
                  "minimum": 1
              }
          },
          "required": [
              "type",
              "num_leds"
          ],
          "additionalProperties": false
      }]
    },
    "api": {
      "type": "object",
      "properties": {
        "type": {
          "enum": ["jenkins", "circleci", "travisci"]
        },
        "url": {
          "type": "string",
          "pattern": "^https?://[0-9a-zA-Z-_]+:?[0-9]+$"
        },
        "pollrate_s": {
          "type": "integer",
          "minimum": 1
        }
      },
      "required": [
        "type",
        "pollrate_s"
      ]
    },
    "jobs": {
      "type": "array",
      "uniqueItems": true,
      "minItems": 1,
      "items": {
        "type": "string"
      }
    }
  },
  "required": [
    "light",
    "api",
    "jobs"
  ]
}
