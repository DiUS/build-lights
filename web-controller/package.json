{
    "name": "web-controller",
    "version": "1.0.0",
    "description": "Build lights web controller",
    "scripts": {
        "clean": "rimraf coverage jscpd.json",
        "prestart": "npm run clean && npm run dist",
        "start": "NODE_ENV=production nodemon -i configuration.json ./src/server/index.js configuration.json",
        "dev:server": "nodejs-dashboard -- nodemon -i configuration.json ./src/server/index.js configuration.json",
        "dev:client": "rollup -m -c ./config/rollup.config.js --watch",
        "dist": "rollup -m -c ./config/rollup.prod.config.js",
        "lint": "standard",
        "jscpd": "jscpd -p src -r json -e **/**/bundle.* -o jscpd.json",
        "pretest": "npm run lint && npm run jscpd",
        "test": "NODE_ENV=test mocha --opts .mocha ./src/**/*spec.js ./src/server/**/*spec.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/dius/build-lights.git"
    },
    "engines": {
        "node": ">=4"
    },
    "keywords": [
        "build lights",
        "pi lights",
        "build monitor"
    ],
    "author": "Tarcio Saraiva <tsaraiva@dius.com.au>",
    "license": "GPL-3.0",
    "bugs": {
        "url": "https://github.com/dius/build-lights/issues"
    },
    "homepage": "https://github.com/dius/build-lights#readme",
    "standard": {
        "globals": [
            "fetch"
        ],
        "ignore": [
            "config/**",
            "**/*.spec.js"
        ]
    },
    "devDependencies": {
        "autoprefixer": "^6.5.1",
        "babel-plugin-css-modules-transform": "^1.1.0",
        "babel-plugin-inferno": "^1.0.0-legacy",
        "babel-plugin-syntax-jsx": "^6.18.0",
        "babel-preset-es2015": "^6.18.0",
        "babel-preset-es2015-rollup": "^1.2.0",
        "babel-register": "^6.18.0",
        "chai": "^3.5.0",
        "cssnano": "^3.7.7",
        "jscpd": "^0.6.5",
        "jsdomify": "^3.1.0",
        "lodash.clone": "^4.5.0",
        "mocha": "^3.1.2",
        "nodejs-dashboard": "^0.1.2",
        "nodemon": "^1.11.0",
        "postcss-cssnext": "^2.8.0",
        "postcss-import": "^8.1.2",
        "postcss-nested": "^1.0.0",
        "postcss-simple-vars": "^3.0.0",
        "proxyquire": "^1.7.10",
        "rimraf": "^2.5.4",
        "rollup": "^0.36.3",
        "rollup-plugin-babel": "^2.6.1",
        "rollup-plugin-commonjs": "^5.0.5",
        "rollup-plugin-filesize": "^1.0.1",
        "rollup-plugin-node-resolve": "^2.0.0",
        "rollup-plugin-postcss": "^0.2.0",
        "rollup-plugin-uglify": "^1.0.1",
        "rollup-watch": "^2.5.0",
        "sinon": "^1.17.6",
        "sinon-chai": "^2.8.0",
        "standard": "^8.4.0",
        "supertest": "^2.0.1"
    },
    "dependencies": {
        "body-parser": "^1.15.2",
        "compression": "^1.6.2",
        "express": "^4.14.0",
        "express-handlebars": "^3.0.0",
        "express-winston": "^2.0.0",
        "helmet": "^3.0.0",
        "inferno": "^0.7.27",
        "inferno-create-element": "^0.7.27",
        "inferno-dom": "^0.7.27",
        "nodejs-system-reboot": "0.0.4",
        "power-off": "^1.0.2",
        "winston": "^2.2.0"
    }
}
